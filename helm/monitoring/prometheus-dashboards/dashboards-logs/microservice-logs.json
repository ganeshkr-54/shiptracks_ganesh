{
  "uid": "svc-error-explorer",
  "title": "Microservices Error Explorer (Loki)",
  "tags": ["microservices", "errors", "loki"],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "label": "Namespace",
        "datasource": { "uid": "Loki-datasource", "type": "loki" },
        "query": "label_values(namespace)",
        "includeAll": true,
        "allValue": ".+",
        "multi": true
      },
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": { "uid": "Loki-datasource", "type": "loki" },
        "query": "label_values({namespace=~\"$namespace\"}, service)",
        "includeAll": true,
        "allValue": ".+",
        "multi": true
      },
      {
        "name": "level",
        "type": "custom",
        "label": "Level",
        "query": "ERROR,error,WARN,warning,INFO,info",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Error Rate per Service",
      "datasource": { "uid": "Loki-datasource", "type": "loki" },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({service=~\".+\", level=~\"ERROR|error\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top Exception Types",
      "datasource": { "uid": "Loki-datasource", "type": "loki" },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (exception_type) (count_over_time({service=~\".+\", level=~\"ERROR|error\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top Error Messages by Service",
      "datasource": { "uid": "Loki-datasource", "type": "loki" },
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "topk(20, sum by (service, msg) (count_over_time({service=~\".+\", level=~\"ERROR|error\"}[10m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Error Log Stream (Filtered by Service)",
      "datasource": { "uid": "Loki-datasource", "type": "loki" },
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 12 },
      "targets": [
        {
          "expr": "{service=~\".+\"} |~ \"ERROR|Error|Exception|MongoServerSelectionError|Unauthorized|Missing token\"",
          "refId": "A"
        }
      ]
    }
  ]
}
